<%- include("../partials/header.ejs") %> 

    <div class="row justify-content-center">
      <div class="col-md-12 text-center">
        <h1>Edit Comment</h1>
      </div>
      <div class="col-lg-4 col-md-6 col-xs-12">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT  " method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %> ">
          </div>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Update!</button>
          </div>
        </form>
        <div>
          <a class="btn btn-md btn-primary" href="/campgrounds">Go Back</a>
        </div>
      </div>
    </div>

